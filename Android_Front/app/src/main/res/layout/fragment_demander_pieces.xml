<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demander pieces"
                android:textAlignment="center"
                android:textColor="@color/slateblue"
                android:textSize="33sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextParagraph"
            android:layout_width="368dp"
            android:layout_height="256dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_border"
            android:gravity="top" />

        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Saisissez votre paragraphe ici"
            android:textColor="#808080"
            android:textSize="16sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="142dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="230dp"
            android:text="Envoyer"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSend"
            android:layout_marginTop="-210dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageEnfant"
                android:layout_width="26dp"
                android:layout_height="22dp"
                app:srcCompat="@drawable/avertissement" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Le message sera envoyé à l'administration"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
